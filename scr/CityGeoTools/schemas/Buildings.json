{
    "id": "https://json.schemastore.org/geojson",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Buildings",
    "description": "Buildings within city boundary",
    "type": "object",
    "required": ["type", "crs", "features"],
    "properties": {
      "type": {
        "type": "string",
        "enum": ["FeatureCollection"]
      },
      "crs": {
        "type": "object",
        "required": ["type", "properties"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["name"]
          },
          "properties": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "enum": ["urn:ogc:def:crs:OGC:1.3:CRS84"]
              }
            }
          }
        }
      },
      "features": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/feature"
        },
        "allOf": [
          {"contains": {"$ref": "#/definitions/is_living_restriction"}},
          {"contains": {"$ref": "#/definitions/living_area_restriction"}},
          {"contains": {"$ref": "#/definitions/storey_count_restriction"}}
        ]
      }
    },
    "definitions": {
      "feature": {
        "type": "object",
        "required": ["type", "properties", "geometry"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["Feature"]
          },
          "properties": {
            "type": "object",
            "required": [
              "id",
              "population",
              "is_living",
              "basement_area",
              "living_area",
              "storeys_count",
              "block_id",
              "municipality_id"
            ],
            "properties": {
              "id": {
                "description": "The unique identifier for a building",
                "type": "integer"
              },
              "population": {
                "description": "The number of people living in a building",
                "type": "integer",
                "minimum": 0
              },
              "is_living": {
                "description": "The flag if a building is living",
                "type": ["boolean", "null"]
              },
              "basement_area": {
                "description": "Foundation area of a building",
                "type": ["number"],
                "minimum": 0
              },
              "living_area": {
                "description": "Living area in a whole building",
                "type": ["number", "null"],
                "minimum": 0
              },
              "storey_count": {
                "description": "The number of storey in a building",
                "type": ["number", "null"],
                "minimum": 0
              },
              "block_id": {
                "description": "The identifier of block where a building is located",
                "type": ["integer"]
              },
              "municipality_id": {
                "description": "The identifier of municipality where a service is located",
                "type": ["integer"]
              }
            }
          },
          "geometry": {
            "type": "object",
            "items": {
              "$ref": "#/definitions/geometry"
            }
          }
        }
      },
      "geometry": {
        "type": "object",
        "required": ["type", "coordinates"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["MultiPolygon", "Polygon"]
          },
          "coordinates": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "integer"
              }
            }
          }
        }
      },
      "is_living_restriction": {
        "type": "object",
        "required": ["properties"],
        "properties": {
          "properties": {
            "type": "object",
            "required": ["is_living"],
            "properties": {
              "is_living": {
                "not": {
                  "type": "null"
                }
              }
            }
          }
        }
      },
      "living_area_restriction": {
        "type": "object",
        "required": ["properties"],
        "properties": {
          "properties": {
            "type": "object",
            "required": ["living_area"],
            "properties": {
              "living_area": {
                "not": {
                  "type": "null"
                }
              }
            }
          }
        }
      },
      "storey_count_restriction": {
        "type": "object",
        "required": ["properties"],
        "properties": {
          "properties": {
            "type": "object",
            "required": ["storeys_count"],
            "properties": {
              "storeys_count": {
                "not": {
                  "type": "null"
                }
              }
            }
          }
        }
      }
    }
  }
  